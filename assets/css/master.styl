@import '_settings'

normalize-css()
base()

body
  margin: 0
  color: #656a6b
  font-family: Work Sans

nav
  margin-left: 1%

h1, h2
  color: #c8c8c8
  text-shadow: -.5px 0 black, 0 .5px black, .5px 0 black, 0 -.5px black
  font-family: Consolas, Courier, monospace

h2
  font-size: 1.5em
  padding-top: 1em

nav
  position: relative
  font-size: 1.2em

.major-feeling
  color: #fff
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black
  font-family: Consolas, Courier, monospace
  font-size: 2em
  font-style: italic
  text-decoration: underline
  font-weight: bold
  line-height: 1em
  margin-left: .5em
  margin-right: 1em
  width: 90%

a
  text-decoration: none
  font-weight: bold
  color: #2b2e2e

.content-block
  width: 80%
  padding-left: 1%
  padding-bottom: 2%

li
  margin: 1em

.art-resume
  list-style-type: none

.rags
  width: 30%

.header
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 40%
  background-image: url('../img/aura5.gif')
  background-size: 100% 100%

.old-computer
  position: relative
  width: 35%
  height: 35%
  padding-top: 10%

@media only screen and (min-device-width: 375px) and (max-device-width: 667px) and (orientation: portrait) and (-webkit-min-device-pixel-ratio: 2)
  .header
    height: 30%

  .old-computer
    width: 50%
    height: 50%
    padding-top: 40%

  .major-feeling
    font-size: 1em

.name-twitch
  display:block

.visual-block
  margin-left: 1%
  padding-bottom: 2%

.visuals-img
  display: block
  padding-bottom: .5em
  width: 40%

.new-hive
  height: 400px
  border: none
  margin: 0
  padding: 0

.poem-pix
  width: 90%
